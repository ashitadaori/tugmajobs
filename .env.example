AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Google Authentication
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Mapbox Configuration (for location autocomplete)
MAPBOX_PUBLIC_TOKEN=
MAPBOX_SECRET_TOKEN=

# Didit KYC Configuration
DIDIT_API_URL=https://verification.didit.me/v2
DIDIT_API_KEY=
DIDIT_ENTITY_ID=
DIDIT_WORKFLOW_ID=
DIDIT_VENDOR_DATA=tugmajobs_user_
DIDIT_CLIENT_ID=
DIDIT_CLIENT_SECRET=
DIDIT_WEBHOOK_SECRET=

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# Gemini AI Configuration
GEMINI_API_KEY=

# Azure Machine Learning Configuration
AZURE_ML_WORKSPACE_NAME=tugmajobs
AZURE_ML_SUBSCRIPTION_ID=
AZURE_ML_RESOURCE_GROUP=AzureML-RG
AZURE_ML_REGION=eastasia

# Azure Authentication (Service Principal)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Azure ML Endpoint (after deployment)
AZURE_ML_ENDPOINT_URL=
AZURE_ML_ENDPOINT_KEY=

# Azure ML Clustering Settings
AZURE_ML_DEFAULT_K=5
AZURE_ML_MAX_ITERATIONS=100
AZURE_ML_TOLERANCE=0.0001
AZURE_ML_ALGORITHM=lloyd
AZURE_ML_INIT_METHOD=k-means++

# Azure ML Feature Scaling
AZURE_ML_SCALING_ENABLED=true
AZURE_ML_SCALING_METHOD=standard

# Azure ML Caching
AZURE_ML_CACHE_ENABLED=true
AZURE_ML_CACHE_TTL=3600

# Azure ML Fallback (use local clustering if Azure ML fails)
AZURE_ML_FALLBACK_ENABLED=true

# Azure ML Logging
AZURE_ML_LOGGING_ENABLED=true
AZURE_ML_LOG_CHANNEL=stack

# Azure ML Timeouts (seconds)
AZURE_ML_CONNECTION_TIMEOUT=30
AZURE_ML_REQUEST_TIMEOUT=120

# KYC Configuration
REQUIRE_EMPLOYER_KYC=true
KYC_PROVIDER=didit

# Feature Flags
ENABLE_GOOGLE_AUTH=true
ENABLE_MAGIC_LINK_LOGIN=true

# PosterMyWall API Configuration
POSTERMYWALL_API_KEY=
POSTERMYWALL_CLIENT_ID=
POSTERMYWALL_CLIENT_SECRET=
POSTERMYWALL_BASE_URL=https://api.postermywall.com
